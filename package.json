{
  "name": "github-auto-deploy-tests",
  "version": "1.0.0",
  "description": "E2E tests for WordPress GitHub Auto-Deploy plugin",
  "private": true,
  "scripts": {
    "wp-env:start": "npx wp-env start",
    "wp-env:stop": "npx wp-env stop",
    "wp-env:destroy": "npx wp-env destroy",
    "wp-env:clean": "npx wp-env clean all",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:setup": "npm run wp-env:start && npx wp-env run cli wp plugin activate github-auto-deploy",
    "test:teardown": "npm run wp-env:stop",
    "test:full": "npm run test:setup && npm run test:e2e && npm run test:teardown"
  },
  "keywords": [
    "wordpress",
    "testing",
    "e2e",
    "playwright"
  ],
  "author": "GitHub Auto-Deploy Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@wordpress/e2e-test-utils-playwright": "^0.25.0",
    "@wordpress/env": "^9.0.0",
    "@wordpress/scripts": "^27.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
